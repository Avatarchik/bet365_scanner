					// 	required: true,
					// 	minlength: 31,
					// 	maxlength: 31,
					// 	isDigits:true
					// },
					
				},
				messages: {
					
					//存款金額
					amount: {
						required: "请输入存款金额",
						isFloatGtZero: "金额必须大于0",
						// number: "请输入正确的格式",
						isNumber_int: "请输入正确的格式，金额为整数",
						min: "最低存款金额为1000",
						max: "最高存款金额为1.000.000"
													
					},
					//存款時間
					datetime: {
						required:"请输入存款时间",
						myDateFormat:"日期格式yyyy-mm-dd"
					},
					//銀行帳號
					account: {
						required:"请输入银行帐号",
						isDigits: "请输入正确的银行帐号"
					},
					//匯款人姓名
					name:{
						required:"请输入姓名",
						isChinese: "请输入中文"
					},
					//流水單號-網銀存款
					order: {
						required:"请输入流水单号",
						// isIntGtZero: "数字必须大于0",
						maxlength: "流水单号为32码以下数字",
						isDigits:"请输入数字"
