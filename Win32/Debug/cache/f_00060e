				unhighlight: function(element) {
					$(element).parent().parent('div').removeClass('has-error');
					// $(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');//default
					$(element).parent().find("i").removeClass('fa fa-times check_icon non-ok').addClass('fa fa-check-circle check_icon ok');//money-new-add
					$(element).parents(".add_col").find(".mob_w").removeClass('error_label');//money-new-add	
				},
				rules: {
					
					//Registion 用戶帳號
					user: {
						required: true,
						checkidhard: true,
						// isRightfulString: true,
						// minlength: 5,
						// maxlength: 15,
					},
					//Registion 用戶密碼
