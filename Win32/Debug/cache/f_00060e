						// minlength: "长度请介于5-15",
						// maxlength: "长度请介于5-15",
						equalTo: "与用户密码不一样" 
					},
					//Registion 姓名
					name: {
						required: "请输入姓名",
						isChinese: "请输入中文",
						minlength: "长度请介于1-4",
						maxlength: "长度请介于1-4",
