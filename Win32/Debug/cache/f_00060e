//------------------------------充值------------------------------------------//
function finance0(id){				
	$(id).validate({
		highlight: function(element) {
		
			$(element).parent().parent("div").addClass('has-error');
			$(element).parent().find("span").removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
			//$(element).parent('span').removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
			
		},
		unhighlight: function(element) {
			$(element).parent().parent('div').removeClass('has-error');
			$(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');
		},
		rules: {
			
			//充值金額
			amount: {
				required: true,
				isFloatGtZero: true,
				isNumber_int: true,
				min:1000,
				max:1000000
			},
			//在線支付
			amount_online: {
				required: true,
				isFloatGtZero: true,
				isNumber_int: true,
				min:1000,
				max:30000
			}	
		},
		messages: {
			
			//充值金額
			amount: {
				required: "请输入充值金额",
				isFloatGtZero: "金额必须大于0",
				isNumber_int: "请输入正确的格式，金额为整数",
				min: "最低充值金额为1000",
				max: "最高充值金额为1.000.000"								
			},
			//在線支付
			amount_online: {
				required: "请输入充值金额",
				isFloatGtZero: "金额必须大于0",
				isNumber_int: "请输入正确的格式，金额为整数",
				min: "最低充值金额为1000",
				max: "最高充值金额为30.000"								
			}				
		},
				
	});				
}


