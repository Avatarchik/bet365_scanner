//account_會員帳號-------------------------------------------------------------

//*帳戶訊息
function account_val(id2){			
				$(id2).validate({
					highlight: function(element) {
					
					$(element).parent().parent("div").addClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					//$(element).parent('span').removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					
				},

				unhighlight: function(element) {
					$(element).parent().parent('div').removeClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');
				},
				rules: {
					
					//Account 地址
					address: {
						required: true,
					},
					//Account 郵件地址
					email: {
						required: true,
						// email:true
						isEmail:true,
						
					},
					//Account 出生日期
					birthday: {
						required: true,
						dateISO:"yyyy/MM/dd"
					},
					//Account 性別
					sex: {
						required: true
					},
					//Account 連絡電話
					phone: {
						required: true,
						isPhone:true
					},
					//Account QQ號
					qq: {
						required: true,
						minlength:5,
						maxlength:12,
						isDigits:true
					},
					//Account 聯繫微信
					wc: {
						required: true
//						isWechat:true
					},
				},
				messages: {
					
					//Account 地址
					address: {
						required: "请输入地址"
					},
					//Account 郵件地址
					email: {
						required: "请输入邮件地址",
						// email: "email格式错误"
						isEmail: "email格式错误",
					},
					//Account 出生日期
					birthday: {
						required: "请输入出生日期",
						dateISO:"出生日期格式不正确"
					},
					//Account 性別
					sex: {
						required: "请选择性别",
					},
					//Account 連絡電話
					phone: {
						required: "请输入电话号码",
						isPhone: "请正确填写您的电话号码"
					},
					//Account QQ號
					qq	: {
						required:  "请输入QQ号",
						minlength: "请正确填写您的QQ号",
						maxlength: "请正确填写您的QQ号",
						isDigits:  "请正确填写您的QQ号"
					},
					//Account 聯繫微信
					wc: {
						required: "请填写联系微信"
//						isWechat: "请正确填写联系微信"
					},
					
					
				},
		        submitHandler: function (form) { // for demo
		            if($("#checkbox1").hasClass("fa-check-square") || $("#checkbox2").hasClass("fa-check-square")){
		            	return true;
		            }
		            alert("請選擇性別");
		            return false;
		        }						
			});				
}

//*更改密碼
//登入密碼
function account_change1_val(id){

				
			
				$(id).validate({
					highlight: function(element) {
					
					$(element).parent().parent("div").addClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					//$(element).parent('span').removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					
				},

				unhighlight: function(element) {
					$(element).parent().parent('div').removeClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');
				},
				rules: {
					
					//Account_更改密碼 当前登陆密码
					old_pwd: {
						required: true,
						// stringCheck: true,
						checkpwdhard: true,
						minlength: 5,
						maxlength: 15
					},
					//Account_更改密碼 新的登陆密码
					new_pwd: {
						required: true,
						// stringCheck: true,
						checkpwdhard: true,
						minlength: 5,
						maxlength: 15
						
					},
					//Account_確認登陸密碼 确认登陆密码
					new_pwd2: {
						required: true,
						// stringCheck: true,
						checkpwdhard: true,
						minlength: 5,
						maxlength: 15,
						equalTo: "#newPwd"
					},
					
					
				},
				messages: {
					
					//Account_更改密碼 当前登陆密码
					old_pwd: {
						required: "请输入当前登陆密码",
						// stringCheck: "只能英文及数字",
						checkpwdhard: "密码为 5-15个字元英数混合",
						minlength: "长度请介于5-15",
						maxlength: "长度请介于5-15"
					},
					//Account_更改密碼 新的登陆密码
					new_pwd: {
						required: "请输入新的登陆密码",
						// stringCheck: "只能英文及数字",
						checkpwdhard: "密码为 5-15个字元英数混合",
						minlength: "长度请介于5-15",
						maxlength: "长度请介于5-15"
						
					},
					//Account_確認登陸密碼 确认登陆密码
					new_pwd2: {
						required: "请输入确认登陆密码",
						// stringCheck: "只能英文及数字",
						checkpwdhard: "密码为 5-15个字元英数混合",
						minlength: "长度请介于5-15",
						maxlength: "长度请介于5-15",
						equalTo: "与新的登陆密码不一样" 
					},
					
					
				},
				
			});				
}

//兑换密碼
function account_change2_val(id){
			
				$("#change_paypwd").validate({
					highlight: function(element) {
					
					$(element).parent().parent("div").addClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					//$(element).parent('span').removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					
				},

				unhighlight: function(element) {
					$(element).parent().parent('div').removeClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');
				},
				rules: {
					
					//Account_更改密碼 当前兑换密码
					old_paypwd: {
						required: true,
						stringCheck: true,
						minlength: 4,
						maxlength: 15
					},
					//Account_更改密碼 新的兑换密码
					new_paypwd: {
						required: true,
						stringCheck: true,
						minlength: 4,
						maxlength: 15
						
					},
					//Account_確認兑换密碼 确认兑换密码
					new_paypwd2: {
						required: true,
						stringCheck: true,
						minlength: 4,
						maxlength: 15,
						equalTo: "#newPwdPay"
					},
					
					
				},
				messages: {
					
					//Account_更改密碼 当前兑换密码
					old_paypwd: {
						required: "请输入当前兑换密码",
						stringCheck: "只能英文及数字",
						minlength: "长度请介于4-15",
						maxlength: "长度请介于4-15"
					},
					//Account_更改密碼 新的兑换密码
					new_paypwd: {
						required: "请输入新的兑换密码",
						stringCheck: "只能英文及数字",
						minlength: "长度请介于4-15",
						maxlength: "长度请介于4-15"
						
					},
					//Account_確認登陸密碼 确认兑换密码
					new_paypwd2: {
						required: "请输入确认兑换密码",
						stringCheck: "只能英文及数字",
						minlength: "长度请介于4-15",
						maxlength: "长度请介于4-15",
						equalTo: "与新的兑换密码不一样" 
					},
			        submitHandler: function (form) {

			            alert("請選擇性別");
			            return false;
			        }					
					
				},
				
			});			
}

//*自我限制
function account_mylimite_val(id){
				
				$(id).validate({
					highlight: function(element) {
					
					$(element).parent().parent("div").addClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					//$(element).parent('span').removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					
					},

					unhighlight: function(element) {
						$(element).parent().parent('div').removeClass('has-error');
						$(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');
					},
					rules: {
						
						//Account_自我限制 存款限额
						money_limit: {
							isDigits: true
						},
						//Account_自我限制 确认支付密码
						paypwd: {
							required: true,
							stringCheck: true,
							minlength: 4,
							maxlength: 15
							
						},
					},
					messages: {
						
						//Account_自我限制 存款限额
						money_limit: {
							stringCheck: "只能数字"
						},
						//Account_自我限制 确认支付密码
						paypwd: {
							required: "请输入确认支付密码",
							stringCheck: "只能英文及数字",
							minlength: "长度请介于4-15",
							maxlength: "长度请介于4-15"
							
						},		
					},
			        submitHandler: function (form) {
			        	if($("#checkbox1").hasClass("fa-square")){			        	
			        		if($("#money_limit").val()=="" || $("#money_limit").val()==null){
			        			alert("存款院額必須輸入數字");
			        			return false;
			        		}
			        	}
			            return true;
			        }									
				});	
}

//自我限制_檢查checkbox
function check(){
	
	setTimeout(function(){
		if($("#open").hasClass('fa fa-lg fa-check-square')){
			account_mylimite_val(account_mylimite_form);
			$("#deposit").attr("disabled",false);
			$("#set").attr("disabled",false);
			$("#set1").attr("disabled",false);

			
		}else
		{
			$("#deposit").attr("disabled",true);
			$("#set").attr("disabled",true);
			$("#set1").attr("disabled",true);
		}
		
		
	},0);
	
	
	
	
}

//event_優惠中心-------------------------------------------------------------

//*現有優惠
function events(id1,id2){

				$(id1).validate({

					rules: {
						//ID
						events_id: {
							stringCheck: true,
							minlength: 5,
							maxlength: 15
						},
						//Password
						events_pwd: {
							stringCheck: true,
							minlength: 5,
							maxlength: 15
						},
						//驗證碼
						events_test: {
							stringCheck: true,
							maxlength: 4
						},
					},
					
					messages: {
						//ID
						events_id:{
							stringCheck: "只能英文及数字",
							minlength: "长度请介于5-15",
							maxlength: "长度请介于5-15"
							
						},
						//Password
						events_pwd:{
							stringCheck: "只能英文及数字",
							minlength: "长度请介于5-15",
							maxlength: "长度请介于5-15"
						},
						//驗證碼
						events_test: {
							stringCheck: "只能英文及数字",
							maxlength: "长度只能为4"
						},

						
					}
				
				});
				
				$(id2).validate({
					highlight: function(element) {
					
					$(element).parent().parent("div").addClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					//$(element).parent('span').removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					
				},

				unhighlight: function(element) {
					$(element).parent().parent('div').removeClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');
				},
				rules: {
					
					//event_優惠中心_現有優惠 输入优惠代码
					coupon: {
						required: true,
						stringCheck: true
					},
					
				},
				messages: {
					
					//event_優惠中心_現有優惠 输入优惠代码
					coupon: {
						required: "请输入优惠代码",
						stringCheck: "只能英文及数字"
					},
					
					
				},
				
			});				
}

//*免費投注
function events2(id){
