					highlight: function(element) {
					
					$(element).parent().parent("div").addClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					//$(element).parent('span').removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					
				},

				unhighlight: function(element) {
					$(element).parent().parent('div').removeClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');
				},
				rules: {
					
					//event_優惠中心_免費投注 输入免费投注代码
					coupon2: {
						required: true,
						stringCheck: true
					},
					
				},
				messages: {
					
					//event_優惠中心_免費投注 输入免费投注代码
					coupon2: {
						required: "请输入免费投注代码",
						stringCheck: "只能英文及数字"
					},
					
					
				},
				
			});				
	});
}

//*返水救援金
function events3(id){
	$(document).ready(function() {

				
			
				$(id).validate({
					highlight: function(element) {
					
					$(element).parent().parent("div").addClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					//$(element).parent('span').removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					
				},

				unhighlight: function(element) {
					$(element).parent().parent('div').removeClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');
				},
				rules: {
					
					//event_優惠中心_返水救援金 日期/時間
					'startData' : {
						required: true,
						myDateFormat_time: true
					},
					//event_優惠中心_返水救援金 日期/時間
					'endData' : {
						required: true,
						myDateFormat_time: true
					},
					
				},
				messages: {
					
					//event_優惠中心_現有優惠 输入优惠代码
					'startData' : {
						required: "请输入日期 / 时间",
						myDateFormat_time: "日期格式yyyy-mm-dd hh:mm"
					},
					//event_優惠中心_返水救援金 日期/時間
					'endData' : {
						required: "请输入日期 / 时间",
						myDateFormat_time: "日期格式yyyy-mm-dd hh:mm"
					},
					
					
				},
				
			});				
	});
}

