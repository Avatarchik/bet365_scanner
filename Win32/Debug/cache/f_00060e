//sweetalert
function alert2(value){
    swal(
        value,
        '',
        'info'
    )
}

function alert3(value,href){
    swal({
		title: value,
		text: "",
		type: "info"   	
    },
    function(e){
    	if(e){
    		location.href=href;
    	}
    }
    )
}

