					// },
					
					
				},
				
			});				
}
//提款
function finance2(id2){				
				$(id2).validate({
					highlight: function(element) {
					
					$(element).parent().parent("div").addClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					//$(element).parent('span').removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					
				},

				unhighlight: function(element) {
					$(element).parent().parent('div').removeClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');
				},
				rules: {
					
					//提款金額
					amount: {
						required: true,
						isFloatGtZero: true,
						// number:true,
						isNumber_int: true,
						min:100,
						max:1000000
					},
					//兌換密碼
					pay_pwd_2: {
						required: true,
						minlength:4,
						maxlength:4,
						isDigits:true
					}
					
				},
				messages: {
					
					//提款金額
					amount: {
						required: "请输入提款金额",
						isFloatGtZero: "金额必须大于0",
						// number: "请输入正确的格式",
						isNumber_int: "请输入正确的格式，金额为整数",
						min: "最低提款金额为100",
						max: "最高提款金额为1.000.000"
													
					},
					//兌換密碼
					pay_pwd_2 : {
						required:  "请输入兑换密码",
						minlength: "请输入4位兑换密码",
						maxlength: "请输入4位兑换密码",
						isDigits:  "请输入4位兑换密码"
					},					
				},
		        submitHandler: function (form) {
		            if($("#bankName3").val()!=null){
		            	return true;
		            }
		            alert("請選擇銀行戶名");
		            return false;
		        }				
				
			});				
}
//綁定銀行卡
function finance3(id2){				
				$(id2).validate({
					highlight: function(element) {
					
					$(element).parent().parent("div").addClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					//$(element).parent('span').removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
					
				},

				unhighlight: function(element) {
					$(element).parent().parent('div').removeClass('has-error');
					$(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');
				},
				rules: {
					
					//存款金額
					name: {
						required: true
					},
					//存款時間
					point: {
						required: true
						
					},
					//銀行帳號
					account: {
						required: true,
						isDigits: true
					},
					//流水單號
					account2: {
						required: true,
						equalTo: "#newBankNum"
					},
					
				},
				messages: {
					
					//存款金額
					name: {
						required: "请填写户名"		
					},
					//存款時間
					point: {
						required:"请填写网点"
					},
					//銀行帳號
					account: {
						required:"请输入银行帐号",
						isDigits: "请输入正确的银行帐号"
					},
					//流水單號
					account2: {
						required:"请输入银行帐号",
						equalTo: "跟银行账号不一致"
					},
				},
			});				
}
//錢包轉帳
function money_change(id){
	$(id).validate({
		highlight: function(element) {
			
			$(element).parent().parent("div").addClass('has-error');
//			$(element).parent().find("span").removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
			//$(element).parent('span').removeClass('glyphicon glyphicon-ok-sign').addClass('glyphicon glyphicon-remove-sign');
			
		},

		unhighlight: function(element) {
			$(element).parent().parent('div').removeClass('has-error');
//			$(element).parent().find("span").removeClass('glyphicon glyphicon-remove-sign').addClass('glyphicon glyphicon-ok-sign');
		},
		
		rules: {
			//Account_更改密碼 当前登陆密码
			money: {
				required: true,
				isDigits:true,
				min: 1,
				max: 1000000
			},
			
		},
		messages: {
			//Account_更改密碼 当前登陆密码
			money: {
				required: "请输入转账金额",
				isDigits:"请输入数字",
				min: "请输入1至1,000,000间任意整数金额",
				max: "请输入1至1,000,000间任意整数金额"
	
			},
		},
	
});
	
}
